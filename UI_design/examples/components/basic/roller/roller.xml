<component>
    <api>
        <prop name="subject_enable" type="subject" help="Make the roller disabled if the subject is 0"/>
    </api>
    <styles>
        <style name="style_base" text_font="geist_light_60" 
            text_line_space="-16" 
            text_color="#surface_primary_light" text_opa="#opa_muted" text_align="center"
            anim_duration="200"/>
        <style name="style_dark" text_color="#surface_primary_dark" />
        <style name="style_selected" bg_opa="0" text_opa="100%" text_color="#surface_primary_light" />

   </styles>
   <view extends="lv_roller">
        <remove_style_all />

        <bind_state_if_eq subject="$subject_enable" ref_value="0" state="disabled" />

        <style name="style_base" />
        <style name="style_selected" selector="selected" />
        
        <bind_style name="style_dark" subject="dark_theme" ref_value="1" />
        <bind_style name="style_dark" subject="dark_theme" ref_value="1" selector="selected" />

        <bind_style subject="$subject_enable" ref_value="0" name="style_disabled" />
   </view>
</component>