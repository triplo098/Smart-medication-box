<component>
    <api>
        <prop name="icon" type="image" default="icon_plus"></prop>
    </api>
    <styles>
        <!-- Styles added by default -->
        <style name="style_base" width="44" height="44" 
                bg_color="#bg_secondary_light"
                bg_opa="100%"
                radius="200" 
                pad_all="0"/>
        <style name="style_pressed" recolor_opa="20%"  recolor="#surface_primary_dark"/>
        <style name="style_icon" image_recolor="#surface_primary_dark" image_recolor_opa="255" />

       <!-- Styles bound when the theme subject is 1 -->
        <style name="style_dark" bg_color="#bg_secondary_dark" />
        <style name="style_pressed_dark" recolor="#surface_primary_light" />
        <style name="style_icon_dark" image_recolor="#surface_primary_light" image_recolor_opa="255" />
    </styles>

   <view extends="lv_button">
        <remove_style_all  /> <!-- Remove the default LVGL styles -->
        <style name="style_base" />
        <style name="style_pressed" selector="pressed"/>

        <bind_style name="style_dark" subject="dark_theme" ref_value="0" />
        <bind_style name="style_pressed_dark" subject="dark_theme" ref_value="1" selector="pressed"/>
     
        <lv_image src="$icon" align="center">
            <style name="style_icon"/>
            <bind_style name="style_icon_dark" subject="dark_theme" ref_value="1" />
        </lv_image>
        
   </view>
</component>