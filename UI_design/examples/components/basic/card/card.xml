<component>
    <previews>
        <!-- To see the panel on both with light and dark theme -->
        <preview style_bg_color="0x888" />
    </previews>

    <styles>
        <style name="style_base" 
            width="300" height="content" pad_all="#unit_lg" pad_row="#unit_xl"
            bg_opa="100%" bg_color="#bg_primary_light" text_color="#surface_primary_light"
            radius="#unit_xl"  
            layout="flex" flex_flow="column"/>

        <style name="style_dark" bg_color="#bg_primary_dark" text_color="#surface_primary_dark" />
    </styles>
   <view>
        <remove_style_all  />
        <style name="style_base" />
        <bind_style subject="dark_theme" ref_value="1" name="style_dark"  />
   </view>
</component>