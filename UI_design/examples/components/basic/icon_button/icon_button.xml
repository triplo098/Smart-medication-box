<component>
    <previews>
        <preview  style_bg_color="0x888" />
    </previews>
    <api>
        <prop name="icon" type="image" default="icon_plus"></prop>
    </api>
    <styles>
        <style name="style_base" radius="#unit_md"  pad_all="#unit_sm" bg_opa="0%"  bg_color="0xfff" width="content" height="content"/>
        <style name="style_pressed" bg_opa="100%" bg_color="#surface_primary_dark" />
        <style name="style_pressed_dark" bg_color="#surface_primary_light" />
        <style name="style_checked" bg_opa="100%" bg_color="#accent1_light" />
        <style name="style_icon" image_recolor="#surface_primary_light" image_recolor_opa="255" />
        <style name="style_icon_dark" image_recolor="#surface_primary_dark" />
    </styles>
   <view extends="lv_button">
        <remove_style_all  />
        <style name="style_base" />
        <style name="style_pressed" selector="pressed" />
        <style name="style_checked" selector="checked" />
        <bind_style name="style_pressed_dark" subject="dark_theme" ref_value="1" selector="pressed" />

        <lv_image src="$icon" align="center">
            <style name="style_icon" />
            <bind_style name="style_icon_dark" subject="dark_theme" ref_value="1" />
        </lv_image>
        
   </view>
</component>