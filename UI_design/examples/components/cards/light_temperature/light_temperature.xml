<component>
    <previews>
        <preview width="320" height="240" style_bg_color="0x888"/>
    </previews>
    <styles>
        <style name="style_arc_main" width="228" height="228" margin_bottom="-98" arc_width="42" arc_image_src="light_temp_arc_bg" />
        <style name="style_arc_indicator" arc_width="42" arc_opa="0" />
        <style name="style_arc_knob" bg_opa="0" border_width="8" border_color="#surface_primary_light" pad_all="6" />
        <style name="arc_knob_dark" border_color="#light" /> 
        <style name="disabled" opa="#opa_muted" />
    </styles>

   <view extends="card" style_flex_track_place="center" style_flex_cross_place="center">
        <card_header title="Light temperature">
            <switch bind_checked="light_temperature"/>
        </card_header>

        <lv_arc bind_value="light_temperature_temp" min_value="2000" max_value="10000" bg_start_angle="160" bg_end_angle="380" start_angle="180">
            <style name="style_arc_main" />
            <style name="style_arc_indicator" selector="indicator" />
            <style name="style_arc_knob" selector="knob" />
            <style name="disabled" selector="disabled" />
            
            <bind_style name="arc_knob_dark" subject="dark_theme" ref_value="1" selector="knob" />
            <bind_state_if_eq subject="light_temperature" ref_value="0" state="disabled" />
       
            <column style_flex_cross_place="center" align="center" y="-10">
                <bind_style subject="light_temperature" ref_value="0" name="disabled" />
                <lv_label bind_text="light_temperature_temp" style_text_font="geist_semibold_28" style_text_letter_space="-1" bind_text-fmt="%dK"></lv_label>
                <lv_label text="Dining room" style_text_font="geist_semibold_12" style_text_letter_space="0" style_translate_y="-4"></lv_label>
            </column>
        </lv_arc>

   </view>
</component>