<component>
    <previews>
        <preview width="240" height="180" style_bg_color="0x222" />
    </previews>

    <api>
        <prop name="city_text" type="string" default="My City"/>
        <prop name="temp" type="subject" default="location1_temp"/>
        <prop name="icon" type="image" default="icon_cloudy"/>
        <prop name="weather_text" type="string" default="Cloudy"/>
    </api>

    <styles>
        <style name="style_main" width="100%" height="100%" bg_opa="0" text_color="#light" text_font="geist_semibold_20"/>
        <style name="style_row_center_ver" flex_cross_place="center" pad_column="#unit_sm"/>
        <style name="style_big_temp" text_font="abril_fatface_80"/>
    </styles>

   <view >  
    <remove_style_all  />
    <style name="style_main" />
        <row align="top_right">
            <style name="style_row_center_ver" />
            <lv_label style_text_font="geist_semibold_12" style_text_color="#light" text="$city_text"/>
            <lv_image src="icon_pin"/>
        </row>
        
        <row align="bottom_left" >
            <style name="style_row_center_ver" />
            <lv_image src="$icon"/>
            <lv_label style_text_font="geist_semibold_12" text="$weather_text" style_margin_bottom="-2"/>
        </row>

        <lv_spangroup align="bottom_right" style_pad_bottom="-23">
            <lv_spangroup-span bind_text="$temp" style="style_big_temp"/>
            <lv_spangroup-span text="Â°C" />
        </lv_spangroup>


   </view>
</component>