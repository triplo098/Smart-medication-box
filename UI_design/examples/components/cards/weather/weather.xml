<component>
    <previews>
        <preview width="320" height="240" />
    </previews>
    <styles>
        <style name="style_main" height="240" text_color="#light"  bg_color="#accent1_light"  pad_all="0" />
        <style name="style_tabview" width="100%" height="100%" bg_opa="0"  text_color="#light"/>
        <style name="style_tab" radius="#unit_xl"  pad_all="#unit_xl"/>
        <style name="tab_bar" bg_opa="0"/>
        <style name="tab_bar_button" border_width="0" text_color="#light" text_font="geist_semibold_14" text_opa="102" />
        <style name="tab_bar_button_checked" bg_color="#light" bg_opa="0" text_color="#light" text_opa="255" border_opa="0" />
    </styles>
   <view extends="card">
        <style name="style_main" />

        <lv_tabview tab_bar_position="bottom" >
            <style name="style_tabview" />

            <lv_tabview-tab text="Sidney" style_bg_image_src="weather_location_1_bg">
                <style name="style_tab" />
                <location city_text="Sidney" icon="icon_cloudy" temp="location1_temp" weather_text="Cloudy"/>

            </lv_tabview-tab>
            <lv_tabview-tab text="Budapest" style_bg_image_src="weather_location_2_bg">
                <style name="style_tab" />
                <location city_text="Budapest, HU" icon="icon_sunny" temp="location2_temp" weather_text="Sunny"/>
            </lv_tabview-tab>

            <lv_tabview-tab_bar height="44">
                <style name="tab_bar" />
            </lv_tabview-tab_bar>

            <lv_tabview-tab_button index="0">
                <style name="tab_bar_button" />
                <style name="tab_bar_button_checked" selector="checked" />
            </lv_tabview-tab_button>
            
            <lv_tabview-tab_button index="1">
                <style name="tab_bar_button" />
                <style name="tab_bar_button_checked" selector="checked" />
            </lv_tabview-tab_button>

            <div  style_pad_top="#unit_md" style_pad_left="#unit_xl" ignore_layout="true">
                <lv_label text="Weather" style_text_font="geist_semibold_20"  />
                <lv_label text="Fri, Aug 15" style_text_font="geist_regular_14" style_text_opa="80%" />
            </div>
        </lv_tabview>


   </view>
</component>