<component>
	<previews>
		<preview width="320" height="360" style_bg_color="0x888" />
	</previews>

	<view extends="card">
		<column>
			<lv_label text="Move goal" style_text_font="geist_semibold_20" />
			<lv_label text="Set your daily activity goal" style_text_font="geist_regular_14" style_text_opa="50%" />
		</column>

		<row height="90" width="100%" style_flex_main_place="space_between">
			<stat_col day="Mon" move="8500" />
			<stat_col day="Tue" move="4000" />
			<stat_col day="Wed" move="6700" />
			<stat_col day="Thu" move="4300" />
			<stat_col day="Fri" move="1000" />
			<stat_col day="Sat" move="0" />
			<stat_col day="Sun" move="0" />
			<div
				name="goal_current"
				ignore_layout="true"
				height="3"
				style_bg_color="#accent1_light"
				style_bg_opa="100%"
				style_radius="10"
				y="30"
			/>
			<div
				name="goal_set"
				ignore_layout="true"
				height="3"
				style_bg_color="#surface_primary_light"
				style_bg_opa="#opa_muted"
				style_radius="10"
				y="44"
			/>
		</row>

		<row style_flex_main_place="space_between" width="100%">
			<circle_button icon="icon_minus">
				<subject_increment_event subject="move_goal_target" step="-100" />
			</circle_button>

			<column style_flex_cross_place="center" style_pad_row="-4">
				<lv_label bind_text="move_goal_target" style_text_font="geist_semibold_28" />
				<lv_label text="steps/day" style_text_font="geist_semibold_12" />
			</column>

			<circle_button>
				<subject_increment_event subject="move_goal_target" step="100" />
			</circle_button>
		</row>

		<button label="Set your goal" width="100%" />
	</view>
</component>
