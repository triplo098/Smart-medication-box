<component>
    <previews>
        <preview width="320" height="240" />
    </previews>
    
    <styles>
        <style name="style_panel_light" bg_color="#accent1_50_light" />
        <style name="style_panel_dark" bg_color="#accent1_50_dark" />
        <style name="button_control" bg_opa="0" />
    </styles>

   <view extends="card" style_pad_row="4">
        <style name="style_panel_light"/>
        <bind_style subject="dark_theme" name="style_panel_dark" ref_value="1" />

        <card_header title="Music player"/>

        <row name="song_info_cont" style_flex_cross_place="center">
            <lv_image src="song_cover_1"/>
            <column style_flex_main_place="start" style_pad_left="12">
                <lv_label text="Onward" style_text_font="geist_semibold_14"/>
                <lv_label text="Jaguar Sun" style_text_font="geist_regular_12" style_text_opa="153"/>
            </column>
        </row>

        <slider style_margin_ver="4" bind_value="song_played" width="100%" start_value="0" min_value="0" max_value="430"/>
        <row width="100%" style_flex_main_place="space_between">
            <lv_label bind_text="song_played" bind_text-fmt="%d"  style_text_font="geist_semibold_12"/>
            <lv_label text="2:55" style_text_font="geist_semibold_12" />
        </row>

        <row width="100%" style_flex_main_place="space_between" style_flex_cross_place="center">
            <icon_button icon="icon_heart" style_pad_all="8">
                <bind_state_if_eq subject="song_liked" ref_value="0" state="checked" />
                <subject_set_int_event subject="song_liked" value="1" trigger="clicked" />
            </icon_button>

            <row style_flex_cross_place="center">
                <icon_button icon="icon_skip_back"/>
                <icon_button icon="icon_play">
                    <bind_flag_if_eq subject="song_playing" ref_value="1" flag="hidden" />
                    <subject_set_int_event subject="song_playing" value="1" trigger="clicked" />
                </icon_button>
                <icon_button icon="icon_pause">
                    <bind_flag_if_eq subject="song_playing" ref_value="0" flag="hidden" />
                    <subject_set_int_event subject="song_playing" value="0" trigger="clicked" />
                </icon_button>
                <icon_button icon="icon_skip_forward"/>
            </row>

            <icon_button icon="icon_volume_max" style_pad_all="8"/>            
        </row>
   </view>
</component>